<UserControl x:Class="Presentation.WpfApp.Views.UpdateProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WpfApp.Views"
             xmlns:viewmodels="clr-namespace:Presentation.WpfApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:UpdateProductViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Update a product" FontSize="25" FontWeight="Bold" Foreground="AliceBlue" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            

        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Text="ID" Foreground="AliceBlue"/>
                <TextBox Grid.Row="1" x:Name="TextProductID" Text="{Binding ProductId}" />
                <Button  Grid.Row="1" Grid.Column="1" Content="Get product" x:Name="GetProductByIdBtn" Command="{Binding GetProductByIdBtnCommand}" />
            </Grid>

        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock Text="Name" Foreground="AliceBlue"/>
            <TextBox x:Name="TextProductName" Text="{Binding UpdateProductRequest.Name}" />
        </StackPanel>
        <StackPanel Grid.Row="3">
            <TextBlock Text="Description (optional)" Foreground="AliceBlue"/>
            <TextBox x:Name="TextProductDescription" Text="{Binding UpdateProductRequest.Description}" />
        </StackPanel>
        <StackPanel Grid.Row="4">
            <TextBlock Text="Price" Foreground="AliceBlue"/>
            <TextBox x:Name="TextProductPrice" Text="{Binding UpdateProductRequest.Price}" />
        </StackPanel>
        <StackPanel Grid.Row="5">
            <TextBlock Text="Category" Foreground="AliceBlue"/>
            <TextBox x:Name="TextProductCategory" Text="{Binding UpdateProductRequest.Category.Name}" />
        </StackPanel>
        <StackPanel Grid.Row="6">
            <TextBlock Text="Manufacture" Foreground="AliceBlue"/>
            <TextBox x:Name="TextProductManufacture" Text="{Binding UpdateProductRequest.Manufacture.Name}" />
        </StackPanel>
        <StackPanel Grid.Row="7">
            <Button Padding="8" Content="Update product" x:Name="UpdateProduct" Command="{Binding UpdateProductCommand}" />
            <Button Padding="8" Content="Go to main menu" Command="{Binding GoToMainMenuCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
